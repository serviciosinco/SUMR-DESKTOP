{
    "name": "SUMR",
    "version": "1.0.0",
    "description": "SUMR App Desktop",
    "main": "main.js",
    "scripts": {
        "start": "electron main.js",
        "electron-toolkit": "electron ./node_modules/electron-toolkit",
        "build": "npm run build-darwin && npm run build-win64 && npm run build-win32",
        "build-darwin": "electron-packager . SUMR --out=dist/ --prune=true --platform=darwin --icon build/icon.icns --overwrite",
        "build-win32": "electron-packager . SUMR --out=dist/ --prune=true --platform=win32 --icon build/icon.ico --overwrite",
        "build-win64": "electron-packager . SUMR --out=dist/ --prune=true --platform=win32 --icon build/icon.ico --arch=x64 --version=0.34.1 --overwrite",
        "installer-mac": "electron-installer-dmg ./dist/SUMR-darwin-x64/SUMR.app name_of_the_installer --overwrite",
        "installer-win": "electron-installer-windows --src dist/SUMR-win32-x64/ --dest dist/releases/",
        "pack": "electron-forge start",
        "make": "electron-forge make",

        "macosx": "npm run build-darwin && npm run installer-mac"
    },
    "author": "Servicios.in",
    "license": "ISC",
    "config": {
        "forge": "./forge.config.js"
    },
    "dependencies": {
        "electron-drag": "^2.0.0",
        "electron-json-storage": "^4.3.0",
        "electron-localshortcut": "^3.2.1",
        "electron-log": "^4.3.1",
        "electron-settings": "^4.0.2",
        "electron-squirrel-startup": "^1.0.0",
        "electron-store": "^6.0.1",
        "jquery": "^3.3.1",
        "open": "^7.3.1",
        "update-electron-app": "^2.0.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-dmg": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "electron": "^11.2.0",
        "electron-builder": "^22.9.1",
        "electron-packager": "^15.2.0",
        "electron-prebuilt-compile": "8.2.0"
    }
}
