{
    "name": "SUMR",
    "version": "1.0.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "start": "electron main.js",
        "electron-toolkit": "electron ./node_modules/electron-toolkit",
        "build-darwin": "electron-packager . electron-app --out=dist/ --platform=darwin --icon build/icon.icns --overwrite",
        "build-mas": "electron-packager . electron-app --out=dist/ --platform=mas --icon build/icon.icns --overwrite",
        "build-linux": "electron-packager . electron-app --out=dist/ --platform=linux --icon build/png/512x512.png --overwrite",
        "build-win32": "electron-packager . electron-app --out=dist/ --platform=win32 --icon build/icon.ico --overwrite",
        "build-win64": "electron-packager . electron-app --out=dist/ --platform=win32 --icon build/icon.ico --arch=x64 --version=0.34.1 --overwrite",
        "build": "npm run build-darwin && npm run build-win64 && npm run build-win32",
        "sv-win": "electron-packager . electron-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=build/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=Electron Tutorial App"
    },
    "author": "Servicios.in",
    "license": "ISC",
    "build": {
        "appId": "com.electron.SUMR",
        "copyright": "Copyright Â© 2018 Servicios.in",
        "productName": "SUMR",
        "electronVersion": "2.0.1",
        "asar": true,
        "directories": {
            "app": "C:\\Users\\DEV_PC\\Documents\\GitHub\\DESKTOP-SUMR",
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "arch_all"
                    ]
                }
            ]
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "public.app-category.productivity"
        }
    },
    "dependencies": {
        "electron-config": "^1.0.0",
        "electron-drag": "^1.2.0",
        "electron-json-storage": "^4.1.0",
        "electron-localshortcut": "^3.1.0",
        "electron-log": "^2.2.14",
        "electron-settings": "^3.1.4",
        "jquery": "^3.3.1",
        "open": "0.0.5"
    },
    "devDependencies": {
        "electron": "^1.8.6",
        "electron-builder": "^20.10.0",
        "electron-packager": "^12.0.1",
        "electron-toolkit": "^1.0.24"
    }
}